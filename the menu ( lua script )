-- slap tower mod menu v16
-- UI Loader
local UserInputService = game:GetService("UserInputService")
local Players = game:GetService("Players")
local LocalPlayer = Players.LocalPlayer

-- Create draggable toggle button (circle)
local toggleBtn = Instance.new("TextButton")
toggleBtn.Size = UDim2.new(0, 40, 0, 40)
toggleBtn.Position = UDim2.new(0, 20, 0.5, -20)
toggleBtn.BackgroundColor3 = Color3.fromRGB(255, 165, 0)
toggleBtn.Text = "+"
toggleBtn.TextColor3 = Color3.new(1,1,1)
toggleBtn.TextSize = 24
toggleBtn.Font = Enum.Font.GothamBold
toggleBtn.BorderSizePixel = 0
toggleBtn.Name = "ToggleButton"
toggleBtn.Draggable = true
toggleBtn.Active = true
toggleBtn.Parent = game.CoreGui

-- Create main menu
local menu = Instance.new("Frame")
menu.Size = UDim2.new(0, 300, 0, 350)
menu.Position = UDim2.new(0.5, -150, 0.5, -175)
menu.BackgroundColor3 = Color3.fromRGB(40, 40, 40)
menu.BorderSizePixel = 0
menu.Visible = false
menu.Active = true
menu.Draggable = true
menu.Parent = game.CoreGui

-- Corner styling
local corner = Instance.new("UICorner", menu)
corner.CornerRadius = UDim.new(0, 10)

-- Title
local title = Instance.new("TextLabel", menu)
title.Size = UDim2.new(1, 0, 0, 40)
title.BackgroundTransparency = 1
title.Text = "slap tower mod menu v16"
title.Font = Enum.Font.GothamBold
title.TextColor3 = Color3.new(1,1,1)
title.TextSize = 18

-- Scrolling holder
local scroll = Instance.new("ScrollingFrame", menu)
scroll.Size = UDim2.new(1, -20, 1, -50)
scroll.Position = UDim2.new(0, 10, 0, 45)
scroll.BackgroundTransparency = 1
scroll.CanvasSize = UDim2.new(0, 0, 0, 300)
scroll.ScrollBarThickness = 6
scroll.BorderSizePixel = 0

local layout = Instance.new("UIListLayout", scroll)
layout.Padding = UDim.new(0, 5)

-- Button function
local function addButton(text, callback)
    local btn = Instance.new("TextButton")
    btn.Size = UDim2.new(1, 0, 0, 40)
    btn.BackgroundColor3 = Color3.fromRGB(60, 60, 60)
    btn.Text = text
    btn.TextColor3 = Color3.new(1,1,1)
    btn.TextSize = 16
    btn.Font = Enum.Font.Gotham
    btn.BorderSizePixel = 0
    btn.Parent = scroll
    local corner = Instance.new("UICorner", btn)
    corner.CornerRadius = UDim.new(0, 6)
    btn.MouseButton1Click:Connect(callback)
end

-- Mods
addButton("Super Speed", function()
    LocalPlayer.Character.Humanoid.WalkSpeed = 100
end)

addButton("Wall Hack", function()
    for _, part in pairs(workspace:GetDescendants()) do
        if part:IsA("BasePart") and part.CanCollide then
            part.CanCollide = false
        end
    end
end)

addButton("Dance", function()
    local anim = Instance.new("Animation")
    anim.AnimationId = "rbxassetid://148840371" -- default dance
    LocalPlayer.Character.Humanoid:LoadAnimation(anim):Play()
end)

addButton("Anti Slap", function()
    LocalPlayer.Character.HumanoidRootPart.Anchored = true
    wait(1)
    LocalPlayer.Character.HumanoidRootPart.Anchored = false
end)

addButton("Infinite Jump", function()
    local jumping = false
    UserInputService.JumpRequest:Connect(function()
        if LocalPlayer.Character then
            LocalPlayer.Character:FindFirstChildOfClass("Humanoid"):ChangeState("Jumping")
        end
    end)
end)

-- Toggle visibility
toggleBtn.MouseButton1Click:Connect(function()
    menu.Visible = not menu.Visible
end)
